def df_prep(path):
    new_df = pd.read_csv(path)
    new_df.drop_duplicates(inplace=True)
    new_df.fillna("Unknown", inplace=True)
    print(new_df)

for index, row in df.iterrows():
    print(str(row["Regional indicator"]).split(',')[0])

